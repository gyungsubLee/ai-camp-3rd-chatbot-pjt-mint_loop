# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# 이미지 생성 프로바이더 설정 (openai 또는 gemini)
IMAGE_PROVIDER=openai

# OpenAI 이미지 생성 설정
OPENAI_IMAGE_MODEL=dall-e-3

# Gemini 이미지 생성 설정
GEMINI_IMAGE_MODEL=imagen-4.0-generate-001
IMAGE_DEFAULT_SIZE=1024x1024
IMAGE_DEFAULT_QUALITY=standard
IMAGE_DEFAULT_STYLE=vivid

# 검색 API
TAVILY_API_KEY=your_tavily_api_key_here

# MCP 서버 설정
SEARCH_MCP_PORT=8050
IMAGE_MCP_PORT=8051

# 선택적: A2A 프로토콜 사용시
A2A_AGENT_NAME=ImageGenerationAgent
A2A_AGENT_PORT=8080
A2A_AGENT_HOST=0.0.0.0

# 디버그 모드
DEBUG=true
LOG_LEVEL=INFO

# 성능 설정
MAX_KEYWORDS=5
SEARCH_MAX_RESULTS=3
IMAGE_TIMEOUT=60
